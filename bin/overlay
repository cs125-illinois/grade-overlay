#!/usr/bin/env node

'use strict'

const overlay = require('../lib/overlay.js');

try {
  const config = overlay.setConfig(require('minimist')(process.argv.slice(2)));
} catch (err) {
  console.log(err);
  console.log(`
usage: overlay onto [--into=into] [--from=from]
       onto: the directory to overlay from on to
       from: the directory to overlay on top of onto (default: cwd)
             from should contain a .overlay.yaml file that controls the overlay
       into: where to put the results (default: temporary directory)`);
}

// vim: ts=2:sw=2:et:ft=javascript
